<mvc:View
	controllerName="com.budgetBook.controller.app"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:kM="kellojo.m"
    height="100%"
    width="100%"
    id="idAppView">

    <Page showHeader="{AppHeader>/isAppHeaderVisible}" class="budgetBookApp-Page">
        <customHeader>
			<Bar design="Header" class="budgetBookApp-Page-Header">
                <contentLeft>
                    <core:Icon src="sap-icon://menu2" press="onMenuButtonPress" class="budgetBookApp-Page-Button" visible="false"/>
                    <Button icon="sap-icon://nav-back" text="{i18n>back}" type="Transparent" press="onBackButtonPress" visible="{AppHeader>/showBackButton}" class="budgetBookApp-Page-BackButton"/>
                    <kM:AppTitle title="{AppHeader>/appTitle}" version="{AppInfo>/version}" visible="{= !${device>/system/phone}}"/>
                </contentLeft>

                <contentMiddle>
                    <kM:AppTitle title="{AppHeader>/appTitle}" version="{AppInfo>/version}" visible="{device>/system/phone}"/>
                </contentMiddle>

                <contentRight>
                    <core:Icon src="sap-icon://user-settings" press="onUserHelpMenuPress" class="budgetBookApp-Page-Button" visible="{= ${AppHeader>/showAddButton} || !${device>/isWebVersion}}" />
                    <core:Icon src="sap-icon://add" press="onAddTransactionPress" class="budgetBookApp-Page-Button" visible="{= ${device>/system/phone} &amp;&amp; ${AppHeader>/showAddButton}}"/>
                    <Button text="{i18n>save}" press="onSaveButtonPress" class="budgetBookApp-Page-BackButton"  type="Transparent" visible="{AppHeader>/showSaveButton}"/>
                </contentRight>
            </Bar>
		</customHeader>

        <content>
            <App id="idApp">
                <pages></pages>
            </App>

            <VBox id="idErrorMessageContainer" class="app-errorMessageContainer"/>
        </content>

    </Page>

</mvc:View>