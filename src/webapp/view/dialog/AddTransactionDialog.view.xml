<mvc:View
	controllerName="com.budgetBook.controller.dialog.AddTransactionDialog"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:kM="kellojo.m"
    height="100%"
    width="100%">

    <kM:Wrapper class="budgetBookDialog-Toolbar">
        <SegmentedButton selectedKey="{/transaction/type}" width="100%">
			<items>
				<SegmentedButtonItem text="{i18n>addTransactionDialogExpenses}" key="expense"/>
				<SegmentedButtonItem text="{i18n>addTransactionDialogIncome}" key="income"/>
			</items>
		</SegmentedButton>
    </kM:Wrapper>

    <VBox class="budgetBookDialog">

        <kM:Wrapper class="budgetBookDialog-FormInputContainer">
            <Label text="{i18n>addTransactionDialogInputTitle}" labelFor="idTitleInput"/>
            <Input 
                id="idTitleInput"
                placeholder="{i18n>addTransactionDialogInputTitlePlaceholder}"
                value="{/transaction/title}"
                valueLiveUpdate="true"
                required="true"
            />
        </kM:Wrapper>

        <kM:Wrapper class="budgetBookDialog-FormInputContainer">
            <Label text="{i18n>addTransactionDialogInputAmount}" labelFor="idAmountInput"/>
            <Input 
                id="idAmountInput"
                value="{ parts: [{path: '/transaction/amount'}, {path: '/transaction/currency'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false } }"
                valueLiveUpdate="true"
                required="true"
            />
        </kM:Wrapper>

        <kM:Wrapper class="budgetBookDialog-FormInputContainer">
            <Label text="{i18n>addTransactionDialogInputCategory}" labelFor="idCategoryInput"/>
            <ComboBox
                id="idCategoryInput"
                value="{/transaction/category}"
                placeholder="{i18n>addTransactionDialogInputCategoryPlaceholder}"
                items="{/categories}"
                width="100%">
                    <core:Item key="{}" text="{}" />
                </ComboBox>
        </kM:Wrapper>

        <kM:Wrapper class="budgetBookDialog-FormInputContainer">
            <Label text="{i18n>addTransactionDialogInputOccurredOn}" labelFor="idDateInput"/>
            <DatePicker id="idDateInput" dateValue="{/transaction/occurredOn}"/>
        </kM:Wrapper>

    </VBox>

</mvc:View>