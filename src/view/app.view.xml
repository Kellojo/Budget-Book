<mvc:View
	controllerName="com.budgetBook.controller.app"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:kellojoM="kellojo.m"
    height="100%"
    width="100%"
    id="idAppView">

    <Page showHeader="true" class="budgetBookApp-Page">
        <customHeader>
			<Bar design="Header" class="budgetBookApp-Page-Header">
                <contentLeft>
                    <kellojoM:Wrapper class="budgetBookApp-Container">
                        <kellojoM:Wrapper class="budgetBookApp-TitleContainer">
                            <Title text="{i18n>appTitle}" class="budgetBookApp-Page-Title"/>
                            <kellojoM:Wrapper class="budgetBookApp-BrandBar"/>
                        </kellojoM:Wrapper>

                        <Label text="{AppInfo>/version}" class="budgedBook-Page-VersionLabel"/>  
                    </kellojoM:Wrapper>
                </contentLeft>

                <contentRight>
                    <core:Icon tooltip="{i18n>appHeaderExportTooltip}" src="sap-icon://upload" class="budgetBookApp-Page-Button"/>
                    <core:Icon src="sap-icon://sys-help" class="budgetBookApp-Page-Button"/>
                </contentRight>
            </Bar>
		</customHeader>

        <content>
            <App id="idApp">
                <pages></pages>
            </App>

            <VBox id="idErrorMessageContainer" class="app-errorMessageContainer"/>
        </content>

    </Page>

</mvc:View>