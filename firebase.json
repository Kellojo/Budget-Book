{
  "hosting": {
    "public": "./src/webapp",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
        "npm run build-preloads"
    ],
    "postdeploy": [
        "npm run remove-preloads"
    ],
    "rewrites": []
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
