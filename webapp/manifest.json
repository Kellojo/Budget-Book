{
    "name": "BudgetP",
    "short_name": "BudgetP",
    "start_url": ".",
    "display": "standalone",
    "background_color": "#005575",
    "theme_color": "#005575",
    "description": "A simple app designed to help you tracking your income and expenses.",
    "prefer_related_applications": false,
    "related_applications": [],
    "icons": [
        {
            "src": "img/appicon@192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "img/appicon_round@192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        }

    ],

    "sap.app": {
        "id": "com.budgetBook",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "applicationVersion": {
          "version": "1.0.0"
        }
    },
    "sap.ui5": {

        "models": {
            "device": {
                "type": "sap.ui.model.json.JSONModel"
            },
            "Database": {
                "type": "sap.ui.model.json.JSONModel"
            },
            "AppInfo": {
                "type": "sap.ui.model.json.JSONModel"
            },
            "User": {
                "type": "sap.ui.model.json.JSONModel"
            },
            "Preferences": {
                "type": "sap.ui.model.json.JSONModel"
            },
            "OpenSourceLicenses": {
                "type": "sap.ui.model.json.JSONModel"
            }
        },
        
        "rootView": {
            "viewName": "com.budgetBook.view.app",
            "type": "XML",
            "async": true
        },

        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewPath": "com.budgetBook.view",
                "viewType": "XML",
                "async": true,
                "transition": "slide",
                "controlId": "idApp",
                "controlAggregation": "pages",
                "bypassed": {
                    "target": ""
                }
            },

            "routes": [
                {
                    "pattern": "",
                    "name": "overview",
                    "target": "overview"
                },
                {
                    "pattern": "plannedTransactions",
                    "name": "plannedTransactions",
                    "target": "plannedTransactions"
                },
                {
                    "pattern": "welcome",
                    "name": "welcome",
                    "target": "welcome"
                },
                {
                    "pattern": "transaction/{transactionId}",
                    "name": "transaction",
                    "target": "transaction"
                },
                {
                    "pattern": "auth",
                    "name": "auth",
                    "target": "auth"
                }
            ],

            "targets": {
                "overview": {
                    "viewName": "overview"
                },
                "plannedTransactions": {
                    "viewName": "plannedTransactions"
                },
                "welcome": {
                    "viewName": "welcome"
                },
                "transaction": {
                    "viewName": "transaction"
                },
                "auth": {
                    "viewName": "auth"
                }
            }
        }
    }
}