<mvc:View
	controllerName="com.budgetBook.controller.app"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:kM="kellojo.m"
    height="100%"
    width="100%"
    id="idAppView">

    <Page showHeader="{= !${device>/system/phone} }" class="budgetBookApp-Page" >
        <customHeader>
			<Bar design="Header" class="budgetBookApp-Page-Header">
                <contentLeft>
                    <core:Icon src="sap-icon://menu2" press="onMenuButtonPress" class="budgetBookApp-Page-Button" visible="false"/>
                    <kM:AppTitle title="{i18n>appTitle}" version="{AppInfo>/version}" subscription="{Subscription>/currentPlan}" subscriptionExpiration="{Subscription>/expiresAt}" />
                </contentLeft>

                <contentRight>
                    <kM:Avatar initials="{= ${User>/isLoggedIn} ? ${User>/userInitials} : ${AppInfo>/initials} }" animate="{Subscription>/isSubscribed}" displaySize="XS" backgroundColor="Random" press="onUserHelpMenuPress" visible="{= !${device>/isTrayVersion}}"/>
                </contentRight>
            </Bar>
		</customHeader>

        <content>
            <App id="idApp">
                <pages></pages>
            </App>

            <VBox id="idErrorMessageContainer" class="app-errorMessageContainer"/>
        </content>

    </Page>

</mvc:View>